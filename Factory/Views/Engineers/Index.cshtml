@{
  Layout ="_Layout";
}

<h2>Engineers</h2>

@using Factory.Models;
@model List<Factory.Models.Engineer>;
  @if(Model.Count == 0)
  {
    <h2> There are no Engineers</h2>
  }
  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id =engineer.EngineerId}) </li>  
  }

  <h4>@Html.ActionLink("Register new engineer","Create")</h4>
  <h4>@Html.ActionLink("Return to homepage","Index", "Home")</h4>