@{
  Layout ="_Layout";
}

@using Factory.Models;
<h1>List Of Machines</h1>

<div class = "topnav">
  <a href = "/">Home</a>
  <a href = "/Engineers">Engineers</a>
  <a class = "active" href = "/Machines">Machines</a>
</div>

@if(Model.Count ==0)
{
  <h3> No Machines has been Registered</h3>
}
<ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new {id = machine.MachineId})</li>
  }
</ul> 
<h5>@Html.ActionLink("Add a new Machine","Create")</h5>
<h5>@Html.ActionLink("Return to homepage","Index","Home")</h5>